---
import '@styles/contact.scss';
import { t } from "i18next";

const socials = [
    {
        name: "Github",
        link: "https://github.com/Kilian-Pichard",
        icon: "github"
    },
    {
        name: "LinkedIn",
        link: "https://www.linkedin.com/in/kilian-pichard/",
        icon: "linkedin"
    },
    {
        name: "Root Me",
        link: "https://www.root-me.org/Gallix64",
        icon: "root-me"
    },
    {
        name: "Mail",
        link: "mailto:contact@kilianpichard.com",
        icon: "mail"
    }
]
