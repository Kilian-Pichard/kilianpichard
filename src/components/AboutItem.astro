---
import '@styles/about_item.scss';
const { place, dateStart, dateEnd, title, description, href, logo } = Astro.props;
---

<div class='item'>
    <div class='item-top'>
        <h5>{place}</h5>
        <span>({dateStart} - {dateEnd})</span>
    </div>
    <div class='item-title'>
        <h3>{title}</h3>
    </div>
    <div class='item-content'>
        <ul>
            <li set:html={description} />
        </ul>
    </div>
    <a href={href} target="_blank" rel="noreferrer"><img src={logo} class="item-logo" alt="Logo item" /></a>
</div>